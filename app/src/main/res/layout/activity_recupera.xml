<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recupera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecuperaClave"
    android:background="@drawable/fondo_app">

    <ImageView
        android:id="@+id/imgIconoRc"
        android:layout_width="250dp"
        android:layout_height="210dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="85dp"
        android:src="@drawable/icono_recupera"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/txtRecupera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresa tu Correo"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="300dp"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/txtRecupera2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recupera tu contrase침a"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="350dp"
        android:layout_marginStart="30dp"/>

    <EditText
        android:id="@+id/txtCorreoRc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:hint="Correo electr칩nico"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:textColorHint="#888888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="400dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

    <EditText
        android:id="@+id/txtCodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:hint="Ingresa el C칩digo"
        android:inputType="textPostalAddress"
        android:padding="12dp"
        android:textColorHint="#888888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="470dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

    <EditText
        android:id="@+id/txtNvPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:hint="Nueva Contrase침a"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColorHint="#888888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="540dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:src="@drawable/boton_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="600dp"/>

    <ImageButton
        android:id="@+id/btnSend"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:src="@drawable/boton_send"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="230dp"
        android:layout_marginTop="600dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>